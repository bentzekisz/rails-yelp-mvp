<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>

<h2>Reviews 💀</h2>
<ul>
  <% @reviews.each do |review| %>
    <li>
      <p><%= review.content %></p>
      <p>Rating: <%= "⭐️" * review.rating %></p>
    </li>
  <% end %>
</ul>

