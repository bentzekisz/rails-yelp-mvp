<h1>➕ Add Review</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, as: :integer, in: 0..5 %>
  <%= f.button :submit %>
<% end %>
