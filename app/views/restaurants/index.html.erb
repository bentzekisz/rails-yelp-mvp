<h1>Restaurants 🍝</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %>
      <p><%= restaurant.address %></p>
      <p><%= restaurant.category %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Add New Restaurant', new_restaurant_path %>
